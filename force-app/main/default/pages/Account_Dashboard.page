<apex:page sidebar="false" docType="html-5.0" controller="VSDashBoard_Account" showheader="false">  
   <c:importvisualstrap />  
   <c:visualstrapblock style="margin: 10px">  
     <center>  
       <c:pageheader title="Account Dashboard" icon="briefcase" subtitle="{!account.name}"/>  
     </center> 
     <c:row >
       <c:column type="col-md-6">
         <c:panel title="Account Information" type="primary">
         <apex:pageMessage severity="ERROR" strength="3" summary="This client is on the hot list" title="Hot List" 
            rendered="{!account.Hot_List_Case_Count__c != null && account.Hot_List_Case_Count__c > 0}" />
         <apex:pageMessage severity="ERROR" strength="3" summary="This client is at risk" title="At Risk" 
            rendered="{!account.At_Risk_Count__c != null && account.At_Risk_Count__c > 0}"/>
        <apex:pageBlock title="General Account Info" mode="maindetail">
        <apex:pageBlockSection showHeader="false" collapsible="false">
        <apex:outputField value="{!account.Name}"/><br/>
        <apex:outputField value="{!account.IntApp_Account_Number__c}"/><br/>
        <apex:outputField value="{!account.Territory__c}"/><br/>
        <apex:outputField value="{!account.Hot_List_Status__c}"/><br/>
        <apex:outputField value="{!account.At_Risk_Status__c}"/><br/>
        </apex:pageBlockSection>
        </apex:pageBlock>
                <apex:outputLink value="https://www.intapp.com/jira/issues/?jql=text%20~%20{!account.Name}" target="_blank">Related JIRA Items
           
        </apex:outputLink>
        </c:panel>
         </c:column>
         <c:column type="col-md-6">  
         <c:panel title="Subscriptions" type="primary">  
           <c:well style="text-align:center;">  
              <c:glyph icon="check" style="font-size:40px"/>&nbsp;<span style="font-size:54px">{!Subscriptions.size}</span>  
              <p class="text-muted">Active Subscriptions</p>  
           </c:well>  
           <apex:dataTable value="{!Subscriptions}" var="sub" styleClass="table table-condensed table-hover table-bordered">  
             <apex:column headerValue="Subscription Number">  
               <apex:outputLink value="/{!sub.Id}">{!sub.Name}</apex:outputLink>  
             </apex:column> 
             <apex:column value="{!sub.Product_Line__c}" headerValue="Product Line"/>
             <apex:column headerValue="Health Rating" style="{!if(sub.At_Risk_Count__c != null && sub.At_Risk_Count__c > 0,'color:red;font-weight: bold', '')}">{!sub.CSM_Health_Rating__c} <c:glyph icon="exclamation-sign" rendered="{!sub.At_Risk_Count__c != null && sub.At_Risk_Count__c > 0}" /></apex:column>
             <apex:column value="{!sub.Customer_Lifecycle_Stage__c}" headerValue="Stage"/>  
           </apex:dataTable>  
           <c:alert rendered="{!Subscriptions.empty}" type="warning" style="text-align:center">  
             <c:glyph icon="exclamation-sign"/> No subscriptions to display  
           </c:alert>  
         </c:panel>  
       </c:column> 
     </c:row>
     <c:row >  
       <c:column type="col-md-6">  
         <c:panel title="Open Cases" type="primary">  
           <c:well style="text-align:center;">  
              <c:glyph icon="tasks" style="font-size:40px"/> &nbsp;<span style="font-size:54px">{!Cases.size}</span>  
              <p class="text-muted">Open Cases</p>  
           </c:well>  
           <apex:dataTable value="{!Cases}" var="case" styleClass="table table-condensed table-hover table-bordered">  
             <apex:column headerValue="ID">  
               <apex:outputLink value="/{!case.Id}">{!case.CaseNumber} - {!case.Subject}</apex:outputLink>  
             </apex:column>  
             <apex:column value="{!case.Status}" headerValue="Status"/>  
             <apex:column value="{!case.Priority}" headerValue="Priority"/>  
           </apex:dataTable>  
           <c:alert rendered="{!Cases.empty}" type="success" style="text-align:center">  
             <c:glyph icon="ok-sign"/> No records to display  
           </c:alert>  
         </c:panel>  
       </c:column>        
     </c:row>  
     <!-- <analytics:reportChart reportId="00O50000003mWfQ"></analytics:reportChart> -->
   </c:visualstrapblock>  
 </apex:page>