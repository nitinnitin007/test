<apex:page standardController="Lead">
<h1>JIRA Search</h1><br/>
This are the JIRA issues which are associated to the Lead:  <b>{!lead.ID}</b>
<br/><br/>

<input type="hidden" id="id" value="{!lead.ID}"/>

<script>
var counter = 0;
function searchUrl() {
if(counter == 0) {
var id18 = document.getElementById('id').value;
var id15 = id18.substring(0,15);
document.getElementById('jiraSearch').src="https://www.intapp.com/jira/plugins/servlet/crmSearch?salesforce-lead=" + id15;

counter = 1;
}
}
</script>

<iframe id="jiraSearch" onLoad="searchUrl();" src="" scrolling="yes" height="600px" width="100%" frameborder="0"></iframe>
</apex:page>