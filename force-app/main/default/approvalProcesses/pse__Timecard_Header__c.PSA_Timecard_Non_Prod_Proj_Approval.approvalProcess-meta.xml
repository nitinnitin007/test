<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pse__Resource__c</field>
        <field>pse__Project__c</field>
        <field>Project_Billing_Type__c</field>
        <field>Timecard_Date__c</field>
        <field>Task_Code__c</field>
        <field>Narrative__c</field>
        <field>pse__Billable__c</field>
        <field>pse__Total_Hours__c</field>
        <field>pse__Bill_Rate__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>pse__Approver__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__Milestone__c</field>
        <field>pse__Status__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>PSE_Timecard_Set_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>NOT(OR(
   pse__Resource__r.pse__Salesforce_User__r.ManagerId = &quot;00550000001OYIe&quot;,
   pse__Resource__r.pse__Salesforce_User__r.ManagerId = &quot;00550000000rh6r&quot;
))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>PSA_Timecard_Has_Been_Rejected_Alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PSE_Timecard_Reject_Timecard</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>PSA - Timecard approval process for timecards submitted against non-customer projects that are not productive (i.e. internal Admin, PTO)</description>
    <emailTemplate>PSA_Templates/PSA_Timecard_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( 
  NOT(ISPICKVAL(pse__Project__r.pse__Project_Type__c, &quot;Customer Project&quot;)), 
  NOT(pse__Project__r.pse__Time_Credited__c),
  NOT(pse__Project__r.Id = &apos;a23500000026CA5&apos;)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSE_Timecard_Set_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Set_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Set_Include_in_FI_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSE_Timecard_Reject_Timecard</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PSA Timecard Non Prod Proj Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>PSE_Timecard_Recall</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
