<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>ContractNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Exception_Approver_2__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Exception_Approver_4__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Exception_Approver_1__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Exception_Approver_3__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Exception_Approver_6__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Exception_Approver_5__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Contract_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Sales_Operations/Contract_Approval_Requested</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(Exception_Approval__c == true, Active__c == true, TEXT(Type__c) != &apos;Services Change Order (Internal)&apos;, ISBLANK( SBQQ__Quote__c))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Amendment_Ready_to_Send</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Contract_Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Contract_Rejected_Exception</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Contract_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_counter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_Contract_owner_of_the_request_Excep</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Contract_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Con-Exception OSA (In Force)</label>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Contract_Recalled_Exception</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
