<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pse__Resource__c</field>
        <field>Owner</field>
        <field>pse__Status__c</field>
        <field>pse__Project__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__Billable__c</field>
        <field>pse__Approver__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>PSA_Expense_Report_Set_PM_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Billable Expense Reports Only</description>
        <entryCriteria>
            <formula>pse__Resource__r.pse__Salesforce_User__c &lt;&gt; pse__Approver__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Project Manager Approval</label>
        <name>Project_Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>PSA_Expense_Report_Set_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Unset_PM_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Check_Include_in_Financials_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Set_Finance_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Set_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>bret.mcmillan@intapp.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Finance Approval</description>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>PSA_Expense_Report_Rejected_Step_2</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Rejected_Step_3</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Set_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Unset_Finance_Approve</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Unset_PM_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSA_Expense_Report_Unset_User_Mgr_Apprvd</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Expense Report Approval Process</description>
    <emailTemplate>PSA_Templates/PSA_Expense_Report_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR( 
   ISPICKVAL(pse__Status__c, &apos;Draft&apos; ), 
   ISPICKVAL( pse__Status__c, &apos;Rejected&apos;), 
   ISPICKVAL(pse__Status__c, &apos;Submitted&apos; ) 
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Expense_Report_Set_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Expense_Report_Rejected_Final</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Unset_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Unset_Finance_Approve</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Unset_PM_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Unset_User_Mgr_Apprvd</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Unset_Action_Include_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Unset_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_Record_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Expense Report Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>PSA_Expense_Report_Set_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
