<?xml version="1.0" encoding="UTF-8"?>
<EscalationRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <escalationRule>
        <fullName>New email2case cases</fullName>
        <active>true</active>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <criteriaItems>
                <field>Account.AccountNumber</field>
                <operation>equals</operation>
                <value>A201781</value>
            </criteriaItems>
            <escalationAction>
                <assignedTo>Tier2</assignedTo>
                <assignedToTemplate>PostSalesSupport/SupportCaseEscalatedOutofYourGroup</assignedToTemplate>
                <assignedToType>Queue</assignedToType>
                <minutesToEscalation>30</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
                <notifyTo>ibrahim.aqqad@intapp.com</notifyTo>
                <notifyToTemplate>PostSalesSupport/SupportCaseEscalatedOutofYourGroup</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
        </ruleEntry>
    </escalationRule>
</EscalationRules>
