<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Rule Code%3A PMP-001Exxx</fullName>
        <actions>
            <name>Email_notification_for_Other</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: PMP-001Exxx
Notification: Reason for TFG Product is &quot;Other&quot;
Sends an email notification when the field Reason for Staying on TFG Products has a value of &quot;Other&quot;</description>
        <formula>ISPICKVAL(Reason_for_staying_on_TFG_Products__c,&quot;Other&quot;)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A PMP-002Exxx</fullName>
        <actions>
            <name>Notify_Account_Team_of_PMP_Stage_Change</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: PMP-002Exxx
Notification of PMP Stage
Sends an email notification when the PMP Stage field is changed to certain picklist values.</description>
        <formula>AND(
  OR(
    ISPICKVAL(PMP_Stage__c,&quot;6. Presented Migration Contract, negotiating.&quot;),
    ISPICKVAL(PMP_Stage__c,&quot;7. Executed Migration Paperwork&quot;),
    ISPICKVAL(PMP_Stage__c,&quot;8. Rejected Intapp Migration. No further efforts.&quot;),
    ISPICKVAL(PMP_Stage__c,&quot;9. Elected contract termination&quot;),
    ISPICKVAL(PMP_Stage__c,&quot;11. Customer rejected migration and TFG implementation. Treat as new sale.&quot;)
  ),
  ISCHANGED(PMP_Stage__c)
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A PMP-003EFxx</fullName>
        <actions>
            <name>Hot_list_not_yet_started</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Hot_List_Email_send_update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Product_Migration_Placeholder__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Hot List</value>
        </criteriaItems>
        <criteriaItems>
            <field>Product_Migration_Placeholder__c.Accepted_onto_Hot_List__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
