<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Rule Code%3A IIR-001Exxx</fullName>
        <actions>
            <name>Ticket_Created_Business_Operations</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Ticket_Created_Requester_Facing</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Intapp_Internal_Request__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Ticket</value>
        </criteriaItems>
        <description>Rule Code: IIR-001Exxx
IIR Ticket Created Notification
Sends an email notification to the business operations team and the requester when a ticket is generated -- not for initiatives</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A IIR-002Exxx</fullName>
        <actions>
            <name>IIR_Ticket_Closed_Notification_Business_Operations_Facing</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>IIR_Ticket_Closed_Notification_Requester_Facing</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>Rule Code: IIR-002Exxx
IIR Ticket Closed Notification
Sends an email to the requester and the business operations team that an IIR ticket has been closed.</description>
        <formula>RecordType.Name = &quot;Ticket&quot;
&amp;&amp;
ISCHANGED(Status__c)
&amp;&amp;
(ISPICKVAL(Status__c, &quot;Closed - Completed&quot;)
||
ISPICKVAL(Status__c, &quot;Closed - No Longer Needed&quot;))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A IIR-003xFxx</fullName>
        <actions>
            <name>Populate_Original_Owner</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Rule Code: IIR-003xFxx
Populate Original Owner
Populates the original owner field</description>
        <formula>TRUE</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A IIR-004Exxx</fullName>
        <actions>
            <name>Request_Owner_Change_Email</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>Rule Code: IIR-004Exxx
Ticket Request Owner Change
Sends an email alert whenever a ticket has a request owner change. Email gets sent to the new owner of the ticket.</description>
        <formula>ISCHANGED(Request_Owner__c)
&amp;&amp;
NOT(ISNEW())</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
