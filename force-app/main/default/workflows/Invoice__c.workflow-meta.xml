<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>X90_Days_Past_Due_Invoice_Notification</fullName>
        <description>90+ Days Past Due Invoice Notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>ameya.thatte@intapp.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>maiya.hilliard@intapp.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Finance/X90_Past_Due_Status_Change</template>
    </alerts>
    <fieldUpdates>
        <fullName>Populate_Salesforce_User_Notes_By</fullName>
        <field>Salesforce_User_Notes_Last_Modified_By__c</field>
        <formula>$User.FirstName&amp;$User.LastName</formula>
        <name>Populate Salesforce User Notes By</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Populate_Salesforce_User_Notes_Date</fullName>
        <field>Salesforce_User_Notes_Last_Modified_Date__c</field>
        <formula>TODAY()</formula>
        <name>Populate Salesforce User Notes Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Remove_from_the_list</fullName>
        <field>Add_to_SF__c</field>
        <literalValue>0</literalValue>
        <name>Remove from the list</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Rule Code%3A INV-001xFxx</fullName>
        <actions>
            <name>Populate_Salesforce_User_Notes_By</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Populate_Salesforce_User_Notes_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Rule Code: INV-001xFxx
Populate Salesforce User Notes By/Date
Populate Salesforce User Notes By/Date when Salesforce User Notes changed.</description>
        <formula>ISCHANGED(Salesforce_User_Notes__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A INV-002xFxx</fullName>
        <actions>
            <name>Remove_from_the_list</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Invoice__c.Add_to_SF__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Rule Code: INV-002xFxx
Attach Invoice`
Attaches Invoice when Add to SF is set to true</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
