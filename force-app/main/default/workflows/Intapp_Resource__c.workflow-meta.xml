<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Rule Code%3A INTR-001Exxx</fullName>
        <actions>
            <name>Intapp_Resource</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: INTR-001Exxx
Intapp Resources
Sends an email notification to the resource when they have been added to a survey.</description>
        <formula>AND(
  ISCHANGED(Survey_Complete__c),
  Survey_Complete__c=TRUE,
  Resource_Name__r.pse__External_Resource__c=FALSE
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A INTR-002xFxx</fullName>
        <actions>
            <name>Populate_Resource_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Rule Code: INTR-002xFxx
Populate Resource Email
Populates the resource email field when a new resource is created</description>
        <formula>TRUE</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
