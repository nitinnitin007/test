        <formula>TRUE</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A OAP-003Exxx</fullName>
        <actions>
            <name>Notify_CSM_of_OA_Project_Cancellation</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: OAP-003Exxx
Sends an email notification whenever a project is abandoned or cancelled.</description>
        <formula>AND(
ISCHANGED(Project_State__c),
TEXT(Project_State__c) = &quot;Cancelled&quot;
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
