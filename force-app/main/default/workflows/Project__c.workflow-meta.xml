<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Rule Code%3A OAP-001Exxx</fullName>
        <actions>
            <name>Notify_Opportunity_Owner_of_Engagement_Manager_Assignmenet</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: OAP-001Exxx
Email Opportunity Owner with Engagement Manager assigned.</description>
        <formula>AND(   Billing_Type__c != &quot;Partner Prime&quot;,   ISCHANGED(Engagement_Manager__c) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A OAP-002xFxx</fullName>
        <actions>
            <name>Populate_CSM_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Populate_Opportunity_Owner_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Populate_Sales_Development_Representativ</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Rule Code: OAP-002xFxx
Updates email fields when an OA Project is created</description>
        <formula>TRUE</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A OAP-003Exxx</fullName>
        <actions>
            <name>Notify_CSM_of_OA_Project_Cancellation</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: OAP-003Exxx
Sends an email notification whenever a project is abandoned or cancelled.</description>
        <formula>AND(
ISCHANGED(Project_State__c),
TEXT(Project_State__c) = &quot;Cancelled&quot;
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
