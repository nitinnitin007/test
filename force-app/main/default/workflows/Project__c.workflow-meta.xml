    <rules>
        <fullName>Rule Code%3A OAP-001Exxx</fullName>
        <actions>
            <name>Notify_Opportunity_Owner_of_Engagement_Manager_Assignmenet</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: OAP-001Exxx
Email Opportunity Owner with Engagement Manager assigned.</description>
        <formula>AND(   Billing_Type__c != &quot;Partner Prime&quot;,   ISCHANGED(Engagement_Manager__c) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
