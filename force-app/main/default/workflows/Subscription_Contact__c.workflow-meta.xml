    <rules>
        <fullName>Rule Code%3A SC-001xFxx</fullName>
        <actions>
            <name>Updated_Audited_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Rule Code: SC-001xFxx
Update_Audited_Date
Updates Audited Date field when Auditor field is changed</description>
        <formula>OR(
  ISCHANGED(Auditor__c),
  AND(
    ISNEW(),
    NOT(ISBLANK(Auditor__c))
  )
)</formula>
