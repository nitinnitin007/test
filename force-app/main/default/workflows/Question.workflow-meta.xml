<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Rule Code%3A QSTN-001Exxx</fullName>
        <actions>
            <name>Notify_Customer_of_Intapp_Customer_Community_Reply</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: QSTN-001Exxx
Notify Customer of Question Reply
Sends an email notification to Customer when a reply to a question is received.</description>
        <formula>LastModifiedById &lt;&gt; CreatedById</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A QSTN-002Exxx</fullName>
        <actions>
            <name>Notify_Support_of_Customer_Community_Question</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Question.CreatedDate</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <description>Rule Code: QSTN-002Exxx
Notify Support of Question
Sends an email notification to Support when a question is posted.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A QSTN-003Exxx</fullName>
        <actions>
            <name>Notify_Support_of_Customer_Community_Reply</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule Code: QSTN-003Exxx
Notify Support of Question Reply
Sends an email notification to Support when a reply to a question is received.</description>
        <formula>LastModifiedById = CreatedById</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A QSTN-004xFxx</fullName>
        <actions>
            <name>X01R50000000KmV1</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Rule Code: QSTN-004xFxx
chatter_answers_num_subscriptions_above_limit_wf</description>
        <formula>NOT(ISPICKVAL(Priority,&apos;high&apos;)) &amp;&amp; ISBLANK(BestReplyId) &amp;&amp; NumSubscriptions &gt;= 20</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A QSTN-005Exxx</fullName>
        <actions>
            <name>Let_Support_know_a_new_questions_has_been_entered_in_the_community_portal</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Question.CreatedDate</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <description>Rule Code: QSTN-005Exxx
Notify Agents
New question generated in community portal should notify support agents</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Rule Code%3A QSTN-006xFxx</fullName>
        <active>false</active>
        <description>Rule Code: QSTN-006xFxx
chatter_answers_no_best_reply_within_time_limit_wf</description>
        <formula>NOT(ISPICKVAL(Priority,&apos;high&apos;)) &amp;&amp; ISBLANK(BestReplyId)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>X01R50000000KmV1</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Question.CreatedDate</offsetFromField>
            <timeLength>24</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Rule Code%3A QSTN-007xFxx</fullName>
        <actions>
            <name>Populate_Record_Creator_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Rule Code: QSTN-007xFxx
Populate Record Creator Email
Populates Record Creator Email field with createdby.email</description>
        <formula>TRUE</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
