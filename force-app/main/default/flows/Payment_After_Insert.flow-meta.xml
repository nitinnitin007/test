                <elementReference>$Record.Proforma_Invoice__c</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Activity_Status__c</field>
            <value>
                <stringValue>Payment Created</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status__c</field>
            <value>
                <stringValue>Payment received</stringValue>
