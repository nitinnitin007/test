    <formulas>
        <name>SalesPriceFormula</name>
        <dataType>Currency</dataType>
        <expression>IF ((ISPICKVAL({!Get_Product.Product_Type__c}, &apos;Services&apos;) || 
ISPICKVAL({!Get_Product.Product_Type__c}, &apos;Software Discount (One Time)&apos;) || ISPICKVAL({!Get_Product.Product_Type__c}, &apos;Services Discount&apos;) || ISPICKVAL({!Get_Product.Product_Type__c}, &apos;Support&apos;) ) , 
{!Get_Quote_Line_Item.SBQQ__NetPrice__c},
   IF(
AND(
{!Get_Quote.SBQQ__SubscriptionTerm__c} &lt;24,
{!Get_Quote.SBQQ__SubscriptionTerm__c} &gt;12),
{!Get_Quote_Line_Item.SBQQ__NetPrice__c}/{!Get_Quote.SBQQ__SubscriptionTerm__c},

IF(
  OR(
    ISBLANK({!Get_Quote_Line_Item.Segment_Term__c}),
    ISNULL({!Get_Quote_Line_Item.Segment_Term__c}),
    {!Get_Quote_Line_Item.Segment_Term__c} = 0
  ),
   ({!Get_Quote_Line_Item.SBQQ__NetPrice__c}/12),    
({!Get_Quote_Line_Item.SBQQ__NetPrice__c}/{!Get_Quote_Line_Item.Segment_Term__c})
)))</expression>
        <scale>2</scale>
    </formulas>
