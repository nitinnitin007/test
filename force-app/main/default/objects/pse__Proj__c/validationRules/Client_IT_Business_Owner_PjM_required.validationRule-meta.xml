<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Client_IT_Business_Owner_PjM_required</fullName>
    <active>false</active>
    <description>These fields are required when closing a project.</description>
    <errorConditionFormula>AND(
  CONTAINS(TEXT(pse__Stage__c), &quot;Closed&quot;),
  OR(
    ISBLANK(Client_PjM__c),
    ISBLANK(Client_Business_IT_Owner__c)
  )
)</errorConditionFormula>
    <errorDisplayField>Complete__c</errorDisplayField>
    <errorMessage>Please fill in values for the Client PjM and Client Business/IT Owner.</errorMessage>
</ValidationRule>
