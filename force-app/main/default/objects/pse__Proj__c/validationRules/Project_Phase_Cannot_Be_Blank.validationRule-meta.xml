<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Project_Phase_Cannot_Be_Blank</fullName>
    <active>true</active>
    <description>Once the project phase has been set, it cannot be changed to be blank.</description>
    <errorConditionFormula>AND( 
  ISCHANGED(pse__Project_Phase__c), 
  ISBLANK(TEXT(pse__Project_Phase__c)) 
)</errorConditionFormula>
    <errorDisplayField>pse__Project_Phase__c</errorDisplayField>
    <errorMessage>Project Phase cannot be changed to blank.</errorMessage>
</ValidationRule>
