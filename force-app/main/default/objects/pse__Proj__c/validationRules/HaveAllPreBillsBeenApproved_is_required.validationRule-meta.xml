<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HaveAllPreBillsBeenApproved_is_required</fullName>
    <active>true</active>
    <description>Have all pre-bills been approved question field is required when closing a project</description>
    <errorConditionFormula>AND( 
ISBLANK(TEXT(Haveallprebillsbeenapproved__c)),
CONTAINS(TEXT(pse__Stage__c), &quot;Pending&quot;), 
NOT($Profile.Id=&quot;00e30000000bvR3&quot;) 
)</errorConditionFormula>
    <errorDisplayField>Haveallprebillsbeenapproved__c</errorDisplayField>
    <errorMessage>All pre-bills must be reviewed and approved before closing the project.</errorMessage>
</ValidationRule>
