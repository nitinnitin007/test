<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Change_Project_Name</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
  ISPICKVAL(pse__Project_Type__c, &quot;Internal&quot;), 
  ISCHANGED(Name), 
  NOT(ISNEW()),
  NOT($Profile.Id=&quot;00e30000000bvR3&quot;)
)</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>The project name may not be changed once it has been set.</errorMessage>
</ValidationRule>
