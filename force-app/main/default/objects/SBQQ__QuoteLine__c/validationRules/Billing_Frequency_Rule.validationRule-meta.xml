<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Billing_Frequency_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT( $Permission.Operations_User ),
NOT(ISNEW()), 
ISCHANGED( SBQQ__BillingFrequency__c )
)</errorConditionFormula>
    <errorMessage>You are not allowed to override Billing Frequency , please request Contract/CRM Ops.</errorMessage>
</ValidationRule>
