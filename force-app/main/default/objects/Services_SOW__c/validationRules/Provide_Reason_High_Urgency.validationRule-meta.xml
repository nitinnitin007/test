<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Provide_Reason_High_Urgency</fullName>
    <active>true</active>
    <description>Please provide a reason for your high urgency categorization.</description>
    <errorConditionFormula>AND(
  ISPICKVAL(Urgency_Level__c,&quot;High&quot;),
  ISBLANK(Reason_for_High_Urgency__c),
  NOT($Profile.Id=&quot;00e30000000bvR3&quot;)
)</errorConditionFormula>
    <errorDisplayField>Reason_for_High_Urgency__c</errorDisplayField>
    <errorMessage>Please provide a reason for your high urgency categorization.</errorMessage>
</ValidationRule>
