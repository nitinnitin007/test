<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Active_Resources_Must_Have_Work_Calendar</fullName>
    <active>false</active>
    <description>Active resources must have a work calendar</description>
    <errorConditionFormula>AND(
  NOT($Profile.Id=&quot;00e30000000bvR3&quot;),
  pse__Is_Resource_Active__c=TRUE,
  ISBLANK(pse__Work_Calendar__c)
)</errorConditionFormula>
    <errorDisplayField>pse__Work_Calendar__c</errorDisplayField>
    <errorMessage>Active Resources must have a work calendar.</errorMessage>
</ValidationRule>
