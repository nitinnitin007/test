<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Populate_Partner_if_identified</fullName>
    <active>true</active>
    <description>If the Partner Engagement field is marked as anything but not identified, the partner field needs to be populated.</description>
    <errorConditionFormula>AND(
  ISPICKVAL(Tsunami_Partner__c,&quot;&quot;),
  NOT($Profile.Id = &apos;00e30000000bvR3&apos;),
  OR(
    ISPICKVAL(Partner_Engagement__c,&quot;Identified&quot;),
    ISPICKVAL(Partner_Engagement__c,&quot;Subcontracted&quot;),
    ISPICKVAL(Partner_Engagement__c,&quot;Prime (led)&quot;)
  )
)</errorConditionFormula>
    <errorDisplayField>Tsunami_Partner__c</errorDisplayField>
    <errorMessage>Please populate the partner</errorMessage>
</ValidationRule>
